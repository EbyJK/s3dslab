#include <stdio.h>
#include <stdlib.h>

#define n 4

int Deque[n];
int front = 0, rear = 0;

int DequeEmpty() {
    return (front == 0 && rear == 0);
}

int DequeFull() {
    return (front == rear + 1) || (front == 0 && rear == n - 1);
}

void insertFront(int value) {
    if (DequeFull()) {
        printf("Circular Deque is full.\n");
    } else {
        if (DequeEmpty()) {
            front = rear = 1;
        } else if (front == 1) {
            front = n;
        } else {
            front = front - 1;
        }
        Deque[front] = value;
        printf("Inserted %d at the front.\n", value);
    }
}

void insertRear(int value) {
    if (DequeFull()) {
        printf("Circular Deque is full.\n");
    } else {
        if (DequeEmpty()) {
            front = rear = 1;
        } else if (rear == n) {
            rear = 1;
        } else {
            rear = rear + 1;
        }
        Deque[rear] = value;
        printf("Inserted %d at the rear.\n", value);
    }
}

void deleteFront() {
    if (DequeEmpty()) {
        printf("Circular Deque is empty. Cannot delete from the front.\n");
    } else {
        printf("Deleted %d from the front.\n", Deque[front]);
        if (front == rear) {
            front = rear = 0;
        } else if (front == n) {
            front = 1;
        } else {
            front = front + 1;
        }
    }
}

void deleteRear() {
    if (DequeEmpty()) {
        printf("Circular Deque is empty. Cannot delete from the rear.\n");
    } else {
        printf("Deleted %d from the rear.\n", Deque[rear]);
        if (front == rear) {
            front = rear = 0;
        } else if (rear == 1) {
            rear = n;
        } else {
            rear = rear - 1;
        }
    }
}

void display() {
    if (DequeEmpty()) {
        printf("Circular Deque is empty.\n");
    } else {
        int i = front;
        printf("Circular Deque elements: ");
        do {
            printf("%d ", Deque[i]);
            if (i == rear) {
                break;
            }
            if (i == n) {
                i = 1;
            } else {
                i = i + 1;
            }
        } while (1);
        printf("\n");
    }
}

int main() {
    int ch, value;
     printf("EBY J KAVUNGAL rollno:14\n");

    while (1) {
        printf("\nCircular Deque Operations:\n");
        printf("1. Insert at front\n");
        printf("2. Insert at rear\n");
        printf("3. Delete from front\n");
        printf("4. Delete from rear\n");
        printf("5. Display\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1:
                printf("Enter value to insert at the front: ");
                scanf("%d", &value);
                insertFront(value);
                break;
            case 2:
                printf("Enter value to insert at the rear: ");
                scanf("%d", &value);
                insertRear(value);
                break;
            case 3:
                deleteFront();
                break;
            case 4:
                deleteRear();
                break;
            case 5:
                display();
                break;
            case 6:
                printf("Exited the program.\n");
                exit(0);

            default:
                printf("Invalid choice.\n");
        }
    }

    return 0;
}
